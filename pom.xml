    <modelVersion>4.0.0</modelVersion>

    <groupId>com.nexttrucking.platform</groupId>
    <artifactId>automation-mobile</artifactId>
    <version>1.0.0.${revision}</version>
    <packaging>jar</packaging>
    <name>automation-mobile</name>

